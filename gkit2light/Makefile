ifndef config
  config=debug64
endif
export config

PROJECTS := shader_kit shader_kit_debug image_viewer test_player test_terrain test_quad

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

shader_kit: 
	@echo "==== Building shader_kit ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f shader_kit.make

shader_kit_debug: 
	@echo "==== Building shader_kit_debug ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f shader_kit_debug.make

image_viewer: 
	@echo "==== Building image_viewer ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f image_viewer.make

test_player: 
	@echo "==== Building test_player ($(config)) ===="
	@${MAKE} --no-print-directory -C projet-mmachine/build -f test_player.make

test_terrain: 
	@echo "==== Building test_terrain ($(config)) ===="
	@${MAKE} --no-print-directory -C projet-mmachine/build -f test_terrain.make

test_quad: 
	@echo "==== Building test_quad ($(config)) ===="
	@${MAKE} --no-print-directory -C projet-mmachine/build -f test_quad.make

clean:
	@${MAKE} --no-print-directory -C . -f shader_kit.make clean
	@${MAKE} --no-print-directory -C . -f shader_kit_debug.make clean
	@${MAKE} --no-print-directory -C . -f image_viewer.make clean
	@${MAKE} --no-print-directory -C projet-mmachine/build -f test_player.make clean
	@${MAKE} --no-print-directory -C projet-mmachine/build -f test_terrain.make clean
	@${MAKE} --no-print-directory -C projet-mmachine/build -f test_quad.make clean

